#!/usr/bin/env groovy

pipelineJob('orders-build-jenkins-operator') {
    displayName('orders-build')

    logRotator {
        numToKeep(30)
        daysToKeep(90)
    }

    configure { project ->
        project / 'properties' / 'org.jenkinsci.plugins.workflow.job.properties.DurabilityHintJobProperty' {
            hint('PERFORMANCE_OPTIMIZED')
        }
    }

    definition {
        cpsScm {
            scm {
                git {
                    remote {
                        url('https://github.com/cloud-architecture-demo/sock-shop-configuration.git')
                    }
                    branches('*/gke-jcasc-demo')
                }
            }
            scriptPath('jenkins-seed-jobs/socks-shop/orders/build/pipelines/orders_build_pipeline.jenkins')
        }
    }
}